[colors]
background = #303030
background-alt = #404040
foreground = #dfdfdf
foreground-alt = #dfdfdf
primary = #777777
secondary = #e60053
alert = #bd2c40

[bar/top]
width = 100%
height = 32

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Inconsolata:size=10;1
font-1 = unifont:size=8:antialias=false;2
font-2 = MaterialIcons:size=12;3
font-3 = FontAwesome5Free:style=Solid:size=12;2
font-4 = FontAwesome5Brands:style=Regular:size=12;2

