modules-right = filesystem xbacklight pulseaudio wlan battery date

[bar/bottom]
width = 100%
height = 28
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Inconsolata:size=10;1
font-1 = unifont:size=8:antialias=false;2
;font-2 = MaterialIcons:size=12;3
font-2 = Inconsolata:size=8;-1
font-3 = FontAwesome5Free:style=Solid:size=8;2
font-4 = FontAwesome5Brands:style=Regular:size=10;3

